<!-- form handling-->
<form method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="Name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="Name" value="" placeholder="">
        </div>

        <div class="form-group">
            <label for="Age" class="text-light">Age</label>
            <input type="text" name="Age" value="" placeholder="">
        </div>

        <div class="form-group">
            <label for="Number" class="text-light">Number</label>
            <input type="text" name="Number" value="" placeholder="">
        </div>

        <div class="form-group">
            <label for="position" class="text-light">Position</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="Position" value="Handler">
                <label for="radio-2" class="radio-label">Handler</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="Position" value="Cutter">
                <label for="radio-3" class="radio-label">Cutter</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="Position" value="Hybrid">
                <label for="radio-4" class="radio-label">Hybrid</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="Gender" value="Male">
                <label for="radio-5" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="Gender" value="Female">
                <label for="radio-6" class="radio-label">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="Status" value="Active">
                <label for="radio-7" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-8" name="Status" value="Inactive">
                <label for="radio-8" class="radio-label">Inactive</label>
            </div> 

        <div class="form-group">
            <label for="contact-info" class="text-light">Contact Info</label>
            <input type="text" name="contact-info" value="" placeholder="">
        </div>

        <div class="form-group">
            <label for="note" class="text-light">Note</label>
            <input type="text" name="note" value="" placeholder="">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
    </div>
</form>